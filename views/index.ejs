<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="navbar">
        <div class="nav-left">
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/create">Create</a>
        </div>
    </div>

    <div class="content">
        <h2>All Blogs</h2>
        <% if (blogs.length === 0) { %>
            <p>No blogs available yet.</p>
        <% } else { %>
            <ul>
                <% blogs.forEach(blog => { %>
                    <li><a href="/blogs/<%= blog._id %>"><%= blog.title %></a></li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    <footer>
        <p>Â© <%= new Date().getFullYear() %> My Website</p>
    </footer>
</body>
</html>

